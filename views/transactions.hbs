<div id="body">
    <div class="data-entry">
        <div class="datat-title">
            <h2>Create Entry</h2>
        </div>
        <form id="add-transaction-form" method="POST" action="/add-transaction-form">
            <label for="input-patron">Patron</label><br>
            <input type="text" name="input-patron"><br>

            <label for="input-date">Date</label><br>
            <input type="text" name="input-date"><br>

            <label for="input-artworks">Artworks (comma seperate)</label><br>
            <input type="text" name="input-artworks"><br>

            <label for="input-frames">Frames (comma seperate)</label><br>
            <input type="text" name="input-frames"><br>

            <div class="submit-button-container">
                <button id="submitButton">Submit</button>
            </div>
        </form>
    </div>
    <div class="data-display">

        <h2>Transactions</h2>

        <div class="title-row">
            <div class="medium-row-item">
                <h3>Patron</h3>
            </div>
            <div class="small-row-item">
                <h3>Date</h3>
            </div>
            <div class="large-row-item">
                <h3>Items</h3>
            </div>
            <div class="small-row-item">
                <h3>Price</h3>
            </div>
            <div class="small-row-item">
                <h3>Total</h3>
            </div>
        </div>
        
        {{#each data}}
            <div class="row">
                <div class="medium-row-item">
                    <p>{{this.first_name}} {{this.last_name}}</p>
                </div>
                <div class="small-row-item">
                    <p>{{this.date}}</p>
                </div>
                <div class="extra-large-row-container">
                    <div class="extra-large-row-item">
                        <div class="large-row-item">
                            <p>First Artwork</p>
                        </div>
                        <div class="small-row-item">
                            <p>$Price</p>
                        </div>
                    </div>
                    <div class="extra-large-row-item">
                        <div class="large-row-item">
                            <p>Second Artwork</p>
                        </div>
                        <div class="small-row-item">
                            <p>$Price</p>
                        </div>
                    </div>
                    <div class="extra-large-row-item">
                        <div class="large-row-item">
                            <p>First Frame</p>
                        </div>
                        <div class="small-row-item">
                            <p>$Price</p>
                        </div>
                    </div>
                    <div class="extra-large-row-item">
                        <div class="large-row-item">
                            <p>Second Frame</p>
                        </div>
                        <div class="small-row-item">
                            <p>$Price</p>
                        </div>
                    </div>
                </div>
                <div class="small-row-item total">
                    <p>$Total</p>
                </div>
                <div class="button-container">
                    <button class="edit-button">Update</button>
                    <button class="delete-button">Delete</button>
                </div>
            </div>
        {{/each}}
        
    </div>
</div>