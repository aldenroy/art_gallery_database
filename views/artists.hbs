<div id="body">
    <div class="data-entry">
        <form id="add-artist-form" method="POST" action="/add-artist-form">

            <div class="datat-title">
                <h2>Create Entry</h2>
            </div>

            <label for="input-fname">First Name</label><br>
            <input type="text" name="input-fname"><br>

            <label for="input-lname">Last Name</label><br>
            <input type="text" name="input-lname"><br>

            <label for="input-email">Email</label><br>
            <input type="text" name="input-email"><br>

            <label for="input-address">Address</label><br>
            <input type="text" name="input-address"><br>

            <div class="submit-button-container">
                <button type="cancel" id="submitButton">Cancle</button>
                <button type="submit" id="submitButton">Submit</button>
            </div>
        </form>

        <form id="update-artist-form" method="POST" action="/update-artist-form" hidden>

            <div class="data-title">
                <h2>Update</h2>
            </div>

            <div data-id="" id="currently-updating">
                Placeholder Name
            </div>

            <label for="input-fname">First Name</label><br>
            <input id="update-first-name" type="text" name="input-fname"><br>

            <label for="input-lname">Last Name</label><br>
            <input id="update-last-name" type="text" name="input-lname"><br>

            <label for="email">Email</label><br>
            <input id="update-email" type="text" name="email"><br>

            <label for="address">Address</label><br>
            <input id="update-address" type="text" name="address"><br>

            <div class="submit-button-container">
                <button type=""submit id="submitButton">Submit</button>
            </div>
        </form>
    </div>
    <div class="data-display">
        <div class="data-display">
            <h2>Artists</h2>
            <div class="title-row">
                <div class="medium-row-item">
                    <h3>Name</h3>
                </div>
                <div class="large-row-item">
                    <h3>Email</h3>
                </div>
                <div class="medium-row-item">
                    <h3>Address</h3>
                </div>
            </div>
            {{#each data}}
              <div class="row" data-id={{this.patron_id}}>
                  <div class="medium-row-item">
                      <p>{{ this.first_name }} {{ this.last_name }}</p>
                  </div>
                  <div class="large-row-item">
                      <p>{{ this.email }}</p>
                  </div>
                  <div class="medium-row-item">
                      <p>{{ this.address }}</p>
                  </div>
                  <div class="button-container">
                    <button onclick="updateArtist({{this.patron_id}})" class="edit-button">Update</button>
                    <button onclick="deleteArtist({{this.patron_id}})"class="delete-button">Delete</button>
                </div>
              </div>
            {{/each}}
        </div>
    </div>
</div>
<script src="./js/update-artists.js"></script>